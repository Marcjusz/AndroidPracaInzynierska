<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FirmaLokal"
    tools:showIn="@layout/activity_firma_lokal">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Zdjęcia lokalu"
                android:textColor="@color/grey"
                android:textSize="30sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                >

                <ImageView
                    android:id="@+id/image_Lokal1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey"
                    />

                <ImageView
                    android:id="@+id/image_Lokal2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey"
                    />

                <ImageView
                    android:id="@+id/image_Lokal3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:adjustViewBounds="true"
                    android:padding="4dp"
                    android:layout_margin="2dp"
                    android:background="@color/grey"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_LokalOpis"
                android:textSize="20sp"
                android:textColor="@color/grey"
                android:padding="5dp"
                android:gravity="center"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bnt_LokalOpis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_button"
                android:layout_marginTop="@dimen/margin_button"
                android:onClick="editOpis"
                android:padding="@dimen/padding_button"
                android:textSize="15sp"
                android:text="Edytuj opis" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numery telefonu:"
                android:textSize="20sp"
                android:textColor="@color/grey"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="@dimen/margin_InputText"
                    android:layout_marginTop="@dimen/margin_InputText"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/input_LokalTel1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_LokalTel1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin_button"
                    android:layout_marginTop="@dimen/margin_button"
                    android:padding="@dimen/padding_button"
                    android:text="zmień" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginBottom="@dimen/margin_InputText"
                    android:layout_marginTop="@dimen/margin_InputText"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/input_LokalTel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_LokalTel2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin_button"
                    android:layout_marginTop="@dimen/margin_button"
                    android:padding="@dimen/padding_button"
                    android:text="zmień" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>